# Application
ENV=development
LOG_LEVEL=INFO
CORS_ALLOW_ORIGINS=["*"]
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL_SECONDS=300

# Database (connects to trading_bot_database container)
# You can either set a full SQLAlchemy DSN in MYSQL_URL (e.g., mysql+pymysql://user:pass@host:3306/db)
# or provide the host only and the DSN will be constructed from the parts below.
MYSQL_URL=localhost
MYSQL_USER=root
MYSQL_PASSWORD=changeme
MYSQL_DB=trading_bot
MYSQL_PORT=3306

# Zerodha (KiteConnect) - placeholders
ZERODHA_API_KEY=
ZERODHA_API_SECRET=
ZERODHA_REDIRECT_URL=http://localhost:3001/auth/zerodha/callback
ZERODHA_ACCESS_TOKEN=

# NewsAPI
NEWSAPI_KEY=
NEWSAPI_LANGUAGE=en

# Risk
MAX_DAILY_LOSS=1000.0
MAX_TRADE_RISK=250.0
POSITION_SIZE=1
SYMBOLS=["NIFTY","BANKNIFTY"]
