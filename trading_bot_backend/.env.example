# Environment configuration for trading_bot_backend
# Copy to .env and customize for your environment.

# App
ENV=development
LOG_LEVEL=INFO
# Comma-separated list or JSON array allowed by pydantic for List[str]
CORS_ALLOW_ORIGINS=*

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL_SECONDS=300

# Database (MySQL)
# Either provide full SQLAlchemy DSN (e.g., mysql+pymysql://user:pass@host:3306/dbname)
# or provide host/port/user/pass/db and the app will build the DSN.
MYSQL_URL=localhost
MYSQL_USER=root
MYSQL_PASSWORD=changeme
MYSQL_DB=trading_bot
MYSQL_PORT=3306

# Zerodha (optional; when not set, app uses paper broker)
ZERODHA_API_KEY=
ZERODHA_API_SECRET=
ZERODHA_REDIRECT_URL=
ZERODHA_ACCESS_TOKEN=

# NewsAPI (optional; if empty, News endpoints return empty list)
NEWSAPI_KEY=
NEWSAPI_LANGUAGE=en

# Risk management
MAX_DAILY_LOSS=1000.0
MAX_TRADE_RISK=250.0
POSITION_SIZE=1
# SYMBOLS can be a JSON array or comma-separated; examples:
# SYMBOLS='["NIFTY","BANKNIFTY"]'
# SYMBOLS=NIFTY,BANKNIFTY
SYMBOLS=NIFTY,BANKNIFTY
