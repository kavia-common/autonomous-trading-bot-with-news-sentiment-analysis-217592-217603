# Environment configuration for trading_bot_backend
# Copy to .env and customize for your environment.

# App
ENV=development
LOG_LEVEL=INFO

# URLs
# Public URLs used by frontend/backends; optional
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
WS_URL=
SITE_URL=http://localhost:3000

# CORS
# You may specify as comma-separated string or JSON array.
# For backward-compatibility, either ALLOW_ORIGINS or CORS_ALLOW_ORIGINS is accepted.
ALLOW_ORIGINS=*
ALLOW_HEADERS=*
ALLOW_METHODS=*
CORS_MAX_AGE=600
COOKIE_DOMAIN=
TRUST_PROXY=false

# Server
HOST=0.0.0.0
UVICORN_HOST=0.0.0.0
UVICORN_WORKERS=1
NODE_ENV=development
REQUEST_TIMEOUT_MS=30000
RATE_LIMIT_WINDOW_S=60
RATE_LIMIT_MAX=100
PORT=3001

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL_SECONDS=300

# Database (MySQL)
# Either provide full SQLAlchemy DSN (e.g., mysql+pymysql://user:pass@host:3306/dbname)
# or provide host/port/user/pass/db and the app will build the DSN.
MYSQL_URL=localhost
MYSQL_USER=root
MYSQL_PASSWORD=changeme
MYSQL_DB=trading_bot
MYSQL_PORT=3306

# Zerodha (optional; when not set, app uses paper broker)
ZERODHA_API_KEY=
ZERODHA_API_SECRET=
ZERODHA_REDIRECT_URL=
ZERODHA_ACCESS_TOKEN=

# NewsAPI (optional; if empty, News endpoints return empty list)
NEWSAPI_KEY=
NEWSAPI_LANGUAGE=en

# Risk management
MAX_DAILY_LOSS=1000.0
MAX_TRADE_RISK=250.0
POSITION_SIZE=1
# SYMBOLS can be a JSON array or comma-separated; examples:
# SYMBOLS='["NIFTY","BANKNIFTY"]'
# SYMBOLS=NIFTY,BANKNIFTY
SYMBOLS=NIFTY,BANKNIFTY
